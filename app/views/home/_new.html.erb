<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><p><%= f.label :email %>
  <%= f.email_field :email %></p></div>

  <div><p><%= f.label :password %>
  <%= f.password_field :password %></p></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me ,"data-mini" => "true" %> <%= f.label :remember_me %></div>
  <% end -%>
  
    <div><%= f.submit "Sign in", "data-inline" => "true" ,"data-theme"=>"b" , "data-iconpos"=>"right" %></div>
  <% end %>
  
<%= render "devise/shared/links" %>


